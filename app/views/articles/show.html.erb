<div class="container">
  <div class="row col-md-10 clo-sm-11 mx-auto">
    
    <div class="title text-center mt-5 mb-4">
      <h2><%= @article.title %></h2>
    </div>
      
    <div class="body">
      <p><%= simple_format(@article.content) %></p>
    </div>
    
    <div class="text-muted">
      <small><%= @article.formatted_created_at %></small>
    
      <% if temple_signed_in? && @temple.id == current_temple.id %>
        ｜
        <%= link_to "編集", edit_article_path(temple_id: @temple.id, id: @article.id), class: "btn btn-sm btn-outline-secondary" %>
        ｜
        <%= link_to "削除", article_path(temple_id: @temple.id, id: @article.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-sm btn-outline-danger" %>
      <% end %>
    </div>
      
    <div class="text-center mt-5">
      <%= link_to articles_path(temple_id: @temple.id) do %>
        <button type="button" class="btn btn-outline-primary">
          <i class="fas fa-list-ul"></i> お知らせ一覧へ
        </button>
      <% end %>
    </div>
  
  </div>
</div>