<div class="simple-calendar">
  <div class="calendar-heading">
    <%= link_to t('simple_calendar.previous', default: '先月'), calendar.url_for_previous_view %>
    <span class="calendar-title"><%= t('date.month_names')[start_date.month] %> <%= start_date.year %></span>
    <%= link_to t('simple_calendar.next', default: '翌月'), calendar.url_for_next_view %>
    <% reservations = Reservation.reservations_one_year %>
  </div>

  <table class="table table-striped">
    <thead>
      <tr>
        <% date_range.slice(0, 7).each do |day| %>
          <th><%= t('date.abbr_day_names')[day.wday] %></th>
        <% end %>
      </tr>
    </thead>

    <tbody>
      <% date_range.each_slice(7) do |week| %>
        <tr>
          <% week.each do |day| %>
            <% if Reservation.check_reservation_days(day).nil? %>
              <%= content_tag :td, class: calendar.td_classes_for(day) do %>
                <%= link_to day.day, "#", class: "calendar-link", data: { date: day.strftime("%Y-%m-%d") } %>
              <% end %>
            <% else %>
              <%= content_tag :td, class: calendar.td_classes_for(day) do %>
                <%= day.day %>
              <% end %>
            <% end %>
          <% end %>
        </tr>
      <% end %>
      
      <script>
      window.addEventListener('DOMContentLoaded', function() {
        document.querySelectorAll('.calendar-link').forEach(function(link) {
          link.addEventListener('click', function(e) {
            e.preventDefault();
            var date = e.target.dataset.date;
            window.location.href = "/reservations/days?date=" + date;
          });
        });
      });
      </script>
    </tbody>
  </table>
</div>
