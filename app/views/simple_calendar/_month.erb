    <!--日付がリンクになっているタイプ-->
    
    <tbody>
      <% date_range.each_slice(7) do |week| %>
        <tr>
          <% week.each do |day| %>
            <% if Reservation.check_reservation_days(day).nil? %>
              <%= content_tag :td, class: calendar.td_classes_for(day) do %>
                <%= link_to day.day, '#', class: "calendar-link", data: { date: day.strftime("%Y-%m-%d") } %>
              <% end %>
            <% else %>
              <%= content_tag :td, class: calendar.td_classes_for(day) do %>
                <%= day.day %>
              <% end %>
            <% end %>
          <% end %>
        </tr>
      <% end %>
      <script>
        document.addEventListener('turbolinks:load', function() {
          document.querySelectorAll('.calendar-link').forEach(function(link) {
            link.addEventListener('click', function(e) {
              e.preventDefault();
              var date = e.target.dataset.date;
              window.location.href = "/reservations/week?date=" + date;
            });
          });
        });
      </script>
    </tbody>