<div class="container">
  <div class="row col-md-10 clo-sm-11 mx-auto">
    
    <div class="title text-center mt-5 mb-4">
      <h2>寺院一覧</h2>
    </div>
    
    <div class="search">
      <%= form_tag(temples_path, method: :get, class: "input-group") do %>
        <%= text_field_tag(:search, params[:search], class: "form-control", placeholder: "寺院名を入力してください") %>
        <%= button_tag(type: "submit", class: "btn btn-outline-primary", id: "button-addon2") do %>
          <i class="fas fa-search"></i> 検索
        <% end %>
      <% end %>
    </div>
    
    <table class="table table-responsive temple-table text-center mt-5">
      <% @temples.each do |temple| %>
      <tr class="field">
        <td class="col-md-4">
          <%= image_tag temple.get_profile_image(200, 200) %><br>
          <%= temple.name %>
          <%= link_to "寺院詳細", admins_temple_path(temple.id), class: "btn btn-sm btn-outline-primary" %>
        </td>
        <td class="col-md-8"><%= temple.introduction %></td>
      </tr>
      <% end %>
    </table>
    
  </div>
</div>