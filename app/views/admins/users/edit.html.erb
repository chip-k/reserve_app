<div class="container">
  <div class="row col-md-10 clo-sm-11 mx-auto">
    
    <h2 class="text-center mt-5 mb-4">登録情報の変更</h2>
    
    <%= form_with(model: [@user], url: admins_user_path(@user), method: :patch) do |f| %>

      <table class="table table-responsive form-table">
        <tbody>
        
          <tr class="field">
            <th><%= f.label :name, "氏名" %></th>
            <td><%= f.text_field :name, class: 'form-control', id: "name" %></td>
          </tr>
      
          <tr class="field">
            <th><%= f.label :name_kana, "氏名(カナ)" %></th>
            <td><%= f.text_field :name_kana, class: 'form-control', id: "name_kana" %></td>
          </tr>
  
          <tr class="field">
            <th><%= f.label :postal_code, "郵便番号", id: "user_postal_code_label" %></th>
            <td><%= f.text_field :postal_code, class: 'form-control', id: "user_postal_code" %></td>
          </tr>
  
          <tr class="field">
            <th><%= f.label :prefecture_code, "都道府県", id: "user_prefecture_code_label" %></th>
            <td><%= f.collection_select :prefecture_code, JpPrefecture::Prefecture.all, :name, :name, class: 'form-control', id: "user_prefecture_code" %></td>
          </tr>
  
          <tr class="field">
            <th><%= f.label :city, "市区町村", id: "user_city_label" %></th>
            <td><%= f.text_field :city, class: 'form-control', id: "user_city" %></td>
          </tr>
  
          <tr class="field">
            <th><%= f.label :street, "番地", id: "user_street_label" %></th>
            <td><%= f.text_field :street, class: 'form-control', id: "user_street" %></td>
          </tr>
  
          <tr class="field">
            <th><%= f.label :other_address, "建物名・部屋番号", id: "user_other_address_label" %></th>
            <td><%= f.text_field :other_address, class: 'form-control', id: "user_other_address" %></td>
          </tr>

          <tr class="field">
            <th><%= f.label :email %></th>
            <td><%= f.email_field :email, autocomplete: "email", class: 'form-control' %></td>
          </tr>
  
          <tr class="field">
            <th><%= f.label :phone_number, "電話番号" %></th>
            <td><%= f.text_field :phone_number, class: 'form-control' %></td>
          </tr>
      
        </tbody>
      </table>
      
      <div class="actions pt-4">
        <%= f.submit "変更", class: "btn btn-outline-secondary w-100" %>
      </div>
      
    <% end %>

    <h3 class="text-center mt-5 mb-4">アカウント削除</h3>
    
    <div class="text-center">
      <% if @user.reservations.where("day >= ?", Date.today).exists? %>
        予約が作成されているため削除できません。
        <%= link_to "#{@user.name}様の予約一覧", reservations_admins_user_path(@user) %>
      <% else %>
        アカウントを削除しますか？
        <%= button_to "削除", admins_user_path(@user), data: { confirm: "本当に削除しますか？", turbo_confirm: "本当に削除しますか？" }, method: :delete, class: "btn btn-outline-danger" %>
      <% end %>
    </div>

    <%= link_to "キャンセル", admins_user_path(@user), class: "text-center mt-3" %>

  </div>
</div>