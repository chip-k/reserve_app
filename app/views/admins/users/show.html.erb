<div class="container">
  <div class="row col-lg-7 col-md-10 mx-auto">
    
    <h2 class="text-center mt-5 mb-4">登録情報</h2>
    
    <p>
      所属寺院: 
      <% if @user.temple %>
        <%= link_to @user.temple.name, temple_path(@temple.id) %>
      <% else %>
        なし
      <% end %>
    </p>
    
    <table class="table table-responsive user-table">
      <tbody>
      
        <tr class="field">
          <th>氏名</th>
          <td><%= @user.name %></td>
        </tr>
      
        <tr class="field">
          <th>氏名(カナ)</th>
          <td><%= @user.name_kana %></td>
        </tr>
      
        <tr class="field">
          <th>郵便番号</th>
          <td><%= @user.postal_code %></td>
        </tr>
      
        <tr class="field">
          <th>都道府県</th>
          <td><%= @user.prefecture_code %></td>
        </tr>
      
        <tr class="field">
          <th>市区町村</th>
          <td><%= @user.city %></td>
        </tr>
      
        <tr class="field">
          <th>番地</th>
          <td><%= @user.street %></td>
        </tr>
      
        <tr class="field">
          <th>建物名・部屋番号</th>
          <td><%= @user.other_address %></td>
        </tr>
      
        <tr class="field">
          <th>メールアドレス</th>
          <td><%= @user.email %></td>
        </tr>
      
        <tr class="field">
          <th>電話番号</th>
          <td><%= @user.phone_number %></td>
        </tr>
      
      </tbody>
    </table>
    
    <%= link_to edit_admins_user_path(@user.id), class: "text-center" do %>
     <button class="btn btn-outline-secondary">編集</button>
    <% end %>
    <%= link_to reservations_admins_user_path(@user), class: "text-center mt-3" do %>
      <button class="btn btn-outline-primary"><%= "#{@user.name}様の予約一覧" %></button>
    <% end %>
    
  </div>
</div>