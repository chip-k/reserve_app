<div class="container">
  <div class="row col-md-10 clo-sm-11 mx-auto">
    
    <div class="text-center mt-5 mb-4">
      <h2>ユーザー管理画面</h2>
    </div>
    
    <div class="user_search">
      <%= form_tag(admins_users_path, method: :get, class: "input-group") do %>
        <%= text_field_tag(:search, params[:search], class: "form-control", placeholder: "名前を入力してください") %>
        <%= button_tag(type: "submit", class: "btn btn-outline-primary", id: "button-addon2") do %>
          <i class="fas fa-search"></i> 検索
        <% end %>
      <% end %>
    </div>
    
    <table class="table table-responsive mt-5 text-center">
      <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td>
          <%= link_to admins_user_path(user.id) do %>
            <button type="button" class="btn btn-sm btn-outline-primary">
              <i class="fas fa-id-card"></i> ユーザー詳細
            </button>
          <% end %>
        </td>
        <td>
          <%= link_to reservations_admins_user_path(user.id) do %>
            <button type="button" class="btn btn-sm btn-outline-primary">
              <i class="fas fa-list-ul"></i> 予約一覧
            </button>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
    
  </div>
</div>