<div class="container">
    
    <h1 class="text-center mt-5 mb-4"><%= @temple.name %></h1>
    
    <div class="row">
      <div class="col-lg-6 col-md-10 col-sm-10 mx-auto mb-3">
        <%= image_tag @temple.get_profile_image(600, 400), class: "profile-image" %><br>
        <% if temple_signed_in? && @temple.id == current_temple.id %>
          <%= link_to "プロフィール編集", edit_temple_registration_path, class: "text-center" %>
        <% end %>
      </div>
    
      <div class="col-lg-6 col-md-10 col-sm-10 mx-auto">
        <%= @temple.introduction %>
      </div>
    </div>
    
    <% if user_signed_in? %>
      <% if current_user.temple == @temple %>
        <%= button_to "所属解除", unassign_temple_path, method: :patch %>
      <% else %>
        <%= button_to "所属する", assign_temple_path(@temple), method: :post %>
      <% end %>
      <%= link_to "予約する", temples_reservations_month_path(temple_id: @temple.id) %>
    <% end %>
    
    <div class="card-list-container row my-5">
      <% @articles.each do |article| %>
        <div class="card col-lg-3 col-md-5 col-sm-8 mx-auto mt-4 p-3 shadow-lg">
          <%= image_tag @temple.get_profile_image(200, 150) %>
          <div class="card-body">
            <div class="row">
              <h2 class="card-title"><%= article.title %></h2>
              <% if article.content.length <= 70 %>
                <p class="card-text"><%= article.content %></p>
              <% else %>
                <p class="card-text">
                  <%= truncate(article.content, length: 70) %>
                  <small><%= link_to "続きを読む", article_path(temple_id: @temple.id, id: article.id) %></small>
                </p>
              <% end %>
              <small class="text-muted"><%= article.formatted_created_at %></small>
            </div>
          </div>
        </div>
      <% end %>
    </div>
      
      <div class="text-center">
        <% if @temple.articles.count > 3 %>
          <h4 class="pt-3 mb-5"><%= link_to '過去のお知らせはこちら', articles_path(temple_id: @temple.id) %></h4>
        <% end %>
      </div>
    </div>
    
    <div class="contact pt-5">
      <h6>お問い合わせ先</h6>
      <p>
        <%= @temple.name %><br>
        〒<%= number_with_hyphen_format(@temple.postal_code) %><br>
        <%= @temple.address_with_prefecture %><br>
        TEL：<%= @temple.phone_number %><br>
      </p>
    </div>
    
</div>


<script src="https://maps.googleapis.com/maps/api/js?v=3.exp&key=<%= ENV['GOOGLE_MAP_API_KEY'] %>&callback=initMap" async defer></script>
  <script>
  function initMap(){
    
    let mapPosition = {lat: <%= @temple.latitude %> , lng: <%= @temple.longitude %> };
    let map = new google.maps.Map(document.getElementById('map'), {
      zoom: 15,
      center: mapPosition
    });
    let transitLayer = new google.maps.TransitLayer();
    transitLayer.setMap(map);
    
    let contentString = '<%= @temple.address %>';
    let infowindow = new google.maps.InfoWindow({
      content: contentString
    });

    let marker = new google.maps.Marker({
      position: mapPosition,
      map: map,
      title: contentString
    });
  }
  </script>
  
  
  <div class="map">
    <div id="map"></div>
  </div>