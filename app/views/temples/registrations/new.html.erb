<div class="container">
  <div class="row col-md-10 clo-sm-11 mx-auto">
    
    <h2 class="text-center mt-5 mb-4">新規登録画面</h2>

    <%= form_with model: @temple, url: temple_registration_path do |f| %>
      <div class="<%= 'error-box' if @temple.errors.any? %>">
        <%= render "devise/shared/error_messages", resource: resource %>
      </div>
  
      <table class="table table-responsive form-table">
        <tbody>
          
          <tr class="field">
            <th class="required"><%= f.label :name, "名前" %></th>
            <td class="form-group <%= 'has-error' if @temple.errors.include?(:name) %>">
              <%= f.text_field :name, class: 'form-control', id: 'new-temple-name', placeholder: "例) 他力本願寺" %>
            </td>
          </tr>
        
          <tr class="field">
            <th class="required"><%= f.label :name_kana, "名前(カナ)" %></th>
            <td class="form-group <%= 'has-error' if @temple.errors.include?(:name_kana) %>">
              <%= f.text_field :name_kana, class: 'form-control', id: 'new-temple-name-kana', placeholder: "例) タリキホンガンジ" %>
            </td>
          </tr>
        
          <tr class="field">
            <th class="required"><%= f.label :postal_code, "郵便番号" %></th>
            <td class="form-group <%= 'has-error' if @temple.errors.include?(:postal_code) %>">
              <%= f.text_field :postal_code, class: 'form-control', id: 'new-temple-postal-code', placeholder: "例) 8100801" %>
            </td>
          </tr>
        
          <tr class="field">
            <th class="required"><%= f.label :prefecture_code, "都道府県" %></th>
            <td class="form-group <%= 'has-error' if @temple.errors.include?(:prefecture_code) %>">
              <%= f.collection_select :prefecture_code, JpPrefecture::Prefecture.all, :name, :name, { prompt: '選択してください' }, class: 'form-control', id: 'new-temple-prefecture-code' %>
            </td>
          </tr>
        
          <tr class="field">
            <th class="required"><%= f.label :address, "住所" %></th>
            <td class="form-group <%= 'has-error' if @temple.errors.include?(:address) %>">
              <%= f.text_field :address, class: 'form-control', id: 'new-temple-address', placeholder: "例) 福岡市博多区〇〇1-2-3" %>
            </td>
          </tr>
        
          <tr class="field">
            <th class="required"><%= f.label :email, "メールアドレス" %></th>
            <td class="form-group <%= 'has-error' if @temple.errors.include?(:email) %>">
              <%= f.email_field :email, autocomplete: "email", class: 'form-control', id: 'new-temple-email', placeholder: "例) example@mail.com" %>
            </td>
          </tr>
        
          <tr class="field">
            <th class="required"><%= f.label :phone_number, "電話番号" %></th>
            <td class="form-group <%= 'has-error' if @temple.errors.include?(:phone_number) %>">
              <%= f.text_field :phone_number, class: 'form-control', id: 'new-temple-phone-number', placeholder: "例) 09012345678" %>
            </td>
          </tr>
        
          <tr class="field">
            <th class="required"><%= f.label :password, "パスワード" %></th>
            <% if @minimum_password_length %>
              <td class="form-group <%= 'has-error' if @temple.errors.include?(:password) %>">
                <%= f.password_field :password, autocomplete: "new-password", class: 'form-control', id: 'new-temple-password-length', placeholder: "例) " + @minimum_password_length.to_s + "文字以上" %>
              </td>
            <% else %>
              <td class="form-group <%= 'has-error' if @temple.errors.include?(:password) %>">
                <%= f.password_field :password, autocomplete: "new-password", class: 'form-control', id: 'new-temple-password' %>
              </td>
            <% end %>
          </tr>
        
          <tr class="field">
            <th class="required"><%= f.label :password_confirmation, "パスワード確認" %></th>
            <td class="form-group <%= 'has-error' if @temple.errors.include?(:password_confirmation) %>">
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control', id: 'new-temple-password-confirmation', placeholder: "もう一度入力してください" %>
            </td>
          </tr>
          
        </tbody>
      </table>

      <div class="actions d-flex justify-content-center">
        <%= f.submit "登録", class: "btn btn-outline-dark" %>
      </div>
      
    <% end %>
    
    <p class="text-center mt-5">アカウントをお持ちの方は<%= link_to "ログイン", new_temple_session_path %>してください。</p>

  </div>
</div>


<%= javascript_pack_tag 'temple_errors' %>