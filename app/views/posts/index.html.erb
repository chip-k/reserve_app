<h1>お知らせ一覧</h1>

<table class="table">
  <tbody>
    <% @posts.each do |post| %>
    <tr>
      <th><%= link_to post.title, post_path(post) %></th>
      <td><%= post.body %></td>
      <td><%= link_to '詳細', post_path(post) %></td>
      <td><%= link_to '編集', edit_post_path(post) %></td>
      <td><%= link_to "削除", post_path(post.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
    </tr>
    <% end %>
  </tbody>
</table>