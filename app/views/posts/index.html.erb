<div class="container">
  <div class="row col-7 mt-5 mx-auto">
    <h1 class="text-center">お知らせ一覧</h1>
    <% @posts.each do |post| %>
      <div class="information-contents pb-5">
        <h3 class="information-content-title mt-5 pb-2 pt-5"><%= post.title %></h3>
        <% if post.body.length <= 70 %>
          <p class="information-content-text"><%= post.body %></p>
        <% else %>
          <p class="information-content-text">
            <%= truncate(post.body, length: 70) %>
            <small><%= link_to "続きを読む", post_path(post) %></small>
          </p>
        <% end %>
        <small class="text-muted"><%= post.formatted_created_at %></small>
        <% if admin_signed_in? %>
          ｜
          <%= link_to '編集', edit_post_path(post) %>
          ｜
          <%= link_to "削除", post_path(post.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
