<div class="container">
  <div class="row col-md-10 clo-sm-11 mx-auto">
    
    <div class="title text-center mt-5 mb-4">
      <h2>編集画面</h2>
    </div>
    
    <%= form_with model: @post do |f| %>
    
      <div class="title">
        <h4>タイトル</h4>
        <div class="form-group <%= 'has-error' if @post.errors.include?(:title) %>">
          <%= f.text_field :title, class: 'form-control mb-3', id: 'edit-post-title' %>
        </div>
        <small id="edit-post-title-error"><%= render 'layouts/errors', model: @post, attribute: :title %></small>
      </div>
      
      <div class="body">
        <h4>本文</h4>
        <div class="form-group <%= 'has-error' if @post.errors.include?(:body) %>">
          <%= f.text_area :body, class: 'form-control mb-3', id: 'edit-post-body', rows: 10 %>
        </div>
        <small id="edit-post-body-error"><%= render 'layouts/errors', model: @post, attribute: :body %></small>
      </div>
      
      <div class="text-center">
        <%= f.submit '保存', class: "btn btn-outline-dark" %>
      </div>
      
    <% end %>
    
  </div>
</div>


<%= javascript_pack_tag 'post_errors' %>