<div class="container">
  <div class="row col-md-10 clo-sm-11 mx-auto">
    
    <div class="title text-center mt-5 mb-4">
      <h2><%= @post.title %></h2>
    </div>
    
    <div class="body">
      <p><%= simple_format(@post.body) %></p>
    </div>
    
    <% @entities.each do |entity| %>
      <% wiki_link = Language.generate_wiki_link(entity['name']) %>
      <p><%= link_to entity['name'], wiki_link, target: '_blank' %></p>
    <% end %>
    
    <div class="text-muted">
      <small><%= @post.formatted_created_at %></small>
      
      <% if admin_signed_in? %>
        ｜
        <%= link_to "編集", edit_post_path(@post), class: "btn btn-sm btn-outline-secondary" %>
        ｜
        <%= link_to "削除", post_path(@post.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-sm btn-outline-danger" %>
      <% end %>
    </div>
  
  </div>
</div>