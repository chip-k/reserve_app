<div class="container">
  <div class="row col-7 mt-5 mb-4 mx-auto">
    
    <h2 class="text-center">新規登録画面</h2>

    <%= form_with model: @user, url: user_registration_path do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
  
      <table class="table">
        <tr>
          <th class="required"><%= f.label :name, "名前" %></th>
          <td><%= f.text_field :name, class: 'form-control', placeholder: "例) 山田 太郎" %></td>
        </tr>
        <tr>
          <th><%= f.label :postal_code, "郵便番号", id: "user_postal_code_label" %></th>
          <td><%= f.text_field :postal_code, class: 'form-control', id: "user_postal_code", placeholder: "例) 8100801" %></td>
        </tr>
        <tr>
          <th><%= f.label :prefecture_code, "都道府県", id: "user_prefecture_code_label" %></th>
          <td><%= f.collection_select :prefecture_code, JpPrefecture::Prefecture.all, :name, :name, { prompt: '選択してください' }, class: 'form-control', id: "user_prefecture_code" %></td>
        </tr>
        <tr>
          <th><%= f.label :city, "市区町村", id: "user_city_label" %></th>
          <td><%= f.text_field :city, class: 'form-control', id: "user_city", placeholder: "例) 福岡市博多区" %></td>
        </tr>
        <tr>
          <th><%= f.label :street, "番地", id: "user_street_label" %></th>
          <td><%= f.text_field :street, class: 'form-control', id: "user_street", placeholder: "例) 〇〇1-2-3" %></td>
        </tr>
        <tr>
          <th><%= f.label :other_address, "建物名・部屋番号", id: "user_other_address_label" %></th>
          <td><%= f.text_field :other_address, class: 'form-control', id: "user_other_address", placeholder: "例) 〇〇マンション101" %></td>
        </tr>
        <tr>
          <th class="required"><%= f.label :email, "メールアドレス" %></th>
          <td><%= f.email_field :email, autocomplete: "email", class: 'form-control', placeholder: "例) example@mail.com" %></td>
        </tr>
        <tr>
          <th class="required"><%= f.label :phone_number, "電話番号" %></th>
          <td><%= f.text_field :phone_number, class: 'form-control', placeholder: "例) 09012345678" %></td>
        </tr>
        <tr>
          <th class="required"><%= f.label :password, "パスワード" %></th>
            <% if @minimum_password_length %>
              <td><%= f.password_field :password, autocomplete: "new-password", class: 'form-control', placeholder: "例) " + @minimum_password_length.to_s + "文字以上" %></td>
            <% else %>
              <td><%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %></td>
            <% end %>
        </tr>
        <tr>
          <th class="required"><%= f.label :password_confirmation, "パスワード確認" %></th>
          <td><%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control', placeholder: "もう一度入力してください" %></td>
        </tr>
      </table>

      <div class="actions d-flex justify-content-center">
        <%= f.submit "登録" %>
      </div>
      
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
