<div class="container">
  <div class="row col-md-10 clo-sm-11 mx-auto">
    
    <h2 class="text-center mt-5 mb-4">登録情報の変更</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <table class="table table-responsive form-table">
        <tbody>

          <tr class="field">
            <th><%= f.label :name, "氏名" %></th>
            <td><%= f.text_field :name, class: 'form-control' %></td>
          </tr>
      
          <tr class="field">
            <th><%= f.label :name_kana, "氏名(カナ)" %></th>
            <td><%= f.text_field :name_kana, class: 'form-control' %></td>
          </tr>
  
          <tr class="field">
            <th><%= f.label :postal_code, "郵便番号" %></th>
            <td><%= f.text_field :postal_code, class: 'form-control' %></td>
          </tr>
  
          <tr class="field">
            <th><%= f.label :prefecture_code, "都道府県" %></th>
            <td><%= f.collection_select :prefecture_code, JpPrefecture::Prefecture.all, :name, :name, class: 'form-control' %></td>
          </tr>
  
          <tr class="field">
            <th><%= f.label :city, "市区町村" %></th>
            <td><%= f.text_field :city, class: 'form-control' %></td>
          </tr>
  
          <tr class="field">
            <th><%= f.label :street, "番地" %></th>
            <td><%= f.text_field :street, class: 'form-control' %></td>
          </tr>
  
          <tr class="field">
            <th><%= f.label :other_address, "建物名・部屋番号" %></th>
            <td><%= f.text_field :other_address, class: 'form-control' %></td>
          </tr>

          <tr class="field">
            <th><%= f.label :email %></th>
            <td><%= f.email_field :email, autocomplete: "email", class: 'form-control' %></td>
          </tr>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <span>Currently waiting confirmation for: <%= resource.unconfirmed_email %></span>
          <% end %>
  
          <tr class="field">
            <th><%= f.label :phone_number, "電話番号" %></th>
            <td><%= f.text_field :phone_number, class: 'form-control' %></td>
          </tr>

          <tr class="field">
            <th><%= f.label :password %> <i>(変更したくない場合は空白のままにしてください)</i></th>
            <td><%= f.password_field :password, autocomplete: "new-password", placeholder: "※パスワードは#{@minimum_password_length}文字以上入力してください", class: 'form-control' %></td>
          </tr>

          <tr class="field">
            <th><%= f.label :password_confirmation %></th>
            <td><%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %></td>
          </tr>

          <tr class="field">
            <th><%= f.label :current_password %> <i>(変更するには現在のパスワードが必要です)</i></th>
            <td><%= f.password_field :current_password, autocomplete: "current-password", class: 'form-control' %></td>
          </tr>
          
        </tbody>
      </table>

      <div class="actions pt-4">
        <%= f.submit "変更", class: "btn btn-outline-secondary w-100" %>
      </div>
      
    <% end %>

    <h3 class="text-center mt-5 mb-4">アカウント削除</h3>
    <div class="text-center">
      <% if @user.reservations.where("day >= ?", Date.today).exists? %>
        予約が作成されているため削除できません。
        <%= link_to "予約一覧", reservations_path(@user.id), class: "btn btn-outline-primary" %>
      <% else %>
        アカウントを削除しますか？
        <%= button_to "削除", registration_path(resource_name), data: { confirm: "本当に削除しますか？", turbo_confirm: "本当に削除しますか？" }, method: :delete, class: "btn btn-outline-danger" %>
      <% end %>
    </div>

    <%= link_to "キャンセル", user_path(@user), class: "text-center mt-3" %>

  </div>
</div>
